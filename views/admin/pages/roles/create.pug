extends ../../layouts/default.pug
include ../../mixins/alert.pug
block main 
  h1(class="mb-4") #{pageTitle}
  +alert-error(5000)
  form(
    action=`/${prefixAdmin}/roles/create` 
    method="post"
  )
    div(class="form-group")
      label(for="title") Tiêu đề
      input(
        type="text"
        class="form-control"
        id="title"
        name="title"
        required
      ) 
    div(class="form-group")
      label(for="title") Mô tả
      input(
        type="text"
        class="form-control"
        id="desc"
        name="description"
      ) 
    div(class="form-group")
      button(
        type="submit"
        class="btn btn-primary"
      ) Tạo mới 